datasource db {
  provider = "mysql"
  url = env("DATABASE_URL_MYSQL")
}

model Node {
  id        Int      @id @default(autoincrement())
  x        Int @default(0)
  y        Int @default(0)
}

model User {
  id        Int      @id @default(autoincrement())
  address   String  @unique
  nickname  String
  avatar_url String
  created_at  DateTime @default(now())
  updated_at   DateTime @updatedAt
}